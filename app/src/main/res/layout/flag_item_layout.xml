<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/flag_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:text="Flag Type"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- TODO: ADD DELETE IMAGE BUTTON -->
        <TextView
            android:id="@+id/flag_date"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="June 24, 2022"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guide_line"
            app:layout_constraintTop_toBottomOf="@+id/flag_remark" />


        <TextView
            android:id="@+id/flag_time"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="08:05:00"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/guide_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flag_remark" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line"
            android:layout_width="1px"
            android:layout_height="0px"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintTop_toBottomOf="@+id/flag_remark" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>