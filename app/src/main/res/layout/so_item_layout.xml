<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="3dp">

    <TextView
        android:id="@+id/so_no_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:text="SO#"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#616161"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/so_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:padding="3dp"
        android:text="Maternal Leave"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/so_no_label" />

    <TextView
        android:id="@+id/so_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:text="Inclusive dates"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#616161"
        app:layout_constraintTop_toBottomOf="@+id/so_no" />

    <TextView
        android:id="@+id/so_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="01/21/2019 - 01/22/2019"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/so_date_label" />
</androidx.constraintlayout.widget.ConstraintLayout>
